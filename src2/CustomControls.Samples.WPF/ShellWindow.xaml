<Window x:Class="CustomControls.Samples.WPF.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomControls.Samples.WPF"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:ShellWindowViewModel,IsDesignTimeCreatable=False}"
        xmlns:prism="http://www.codeplex.com/prism"
        xmlns:utils="clr-namespace:CustomControls.Samples.WPF.Utils"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Title="{Binding Title}">
    <Border>
        <ContentControl HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                        prism:RegionManager.RegionName="{x:Static utils:RegionNames.Root}"/>
    </Border>
</Window>
