            </Style>
            <Style TargetType="TextBlock" x:Key="PatientCommandTextBlockStyle">
                <Setter Property="Margin" Value="10,1"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
        </StackPanel.Resources>
        
